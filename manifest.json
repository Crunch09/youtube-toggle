{
  "manifest_version": 2,

  "name": "YouTube toggle",
  "description": "Pause / play youtube via shortcut from anywhere",
  "version": "1.0",

  "permissions": [
    "tabs",
    "*://*.youtube.com/*"
  ],
  "commands": {
    "toggle-youtube": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description" : "Toggle YouTube"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "128": "icon128_128.png",
    "48": "icon48_48.png"
}
